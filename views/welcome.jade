extends layout2

block content
    #myTabs(style='width:1280px;')
      ul
        li
          a#tHome(href='#home')
            span home
        li
          a#tAbout(href='#about')
            span about me
        li
          a#tHelp(href='#help')
            span help
      #home        
        #homeDemo(style='height: 500px; width: 500px; border-radius: 5px; border: 2px white solid;float:left')
            br
            table
              tr
                td Name: !{firstName} !{lastName}
              tr        
                td#appendNum Age: 
              tr
                td Gender: !{gender}
              tr
                td Starting weight: !{weight}
                td Date:
              tr
                td Last Weigh in:
                td Date:
              tr
                td Goal Weight: !{goal}
                td End Date:
              tr
                td Difference from last weigh in:
              tr
                td Difference from goal weight:
            #graph(style='height: 200px; width: 450px; border-radius: 5px; border: 2px white solid; margin-left:20px;margin-top:20px;')
              img.picture(style = 'height:200px;width:450px;', src='images/placeholderchart1.jpg')
        #pictures(style = 'height: 620px; width: 690px; border-radius: 5px; border: 2px white solid;float: right')  
          #pic1(style = 'height: 550px; width:330px; border-radius: 5px; border:2px white solid; float:left; margin-top:5px;margin-left:5px')
          #pic2(style = 'height: 550px; width:330px; border-radius: 5px; border:2px white solid; float:right; margin-top:5px;margin-right:5px')
        #todaysUpdate(style = 'height: 100px; width: 400px; border-radius: 5px; border: 2px white solid; float: left;margin-top:15px')
          form(method='post', action='/nothingYet')
            table
              tr
                td Today's weigh in: 
                td
                  input(style='width: 50px',type='text', name='todayWeighIn')
              tr
                td 
            input(class='button', type='button', value='Save')
          
      #about
        - male = (gender == 'male') ? 'selected' : null 
        - female = (gender == 'female') ? 'selected' : null
        p Welcome !{firstName}!  Tell us about yourself.
        .demoG
          div(style='margin: 5px;')
            p Your profile:
            br
            form(method='post', action='/demoUpdate')
              table
                tr
                  td First Name: 
                  td
                    input(type='text', name='fname', value='#{firstName}')
                tr
                  td Last Name: 
                  td
                    input(type='text', name='lname', value='#{lastName}')
                tr
                  td Email: 
                  td
                    input(type='email', name='email', value='#{email}')
                tr#append
                  td DOB: 
                  td
                    input#dob(type='date', name='dob', value='#{dob}')
                tr
                  td Gender: 
                  td
                    select#selector(name='gender')
                      option(value='female', selected=female) Female
                      option(value='male', selected=male) Male
                tr
                  td Starting Weight: 
                  td
                    input(type='text', name='weight', value='#{weight}')
                tr
                  td Goal Weight: 
                  td
                    input(type='text', name='goal', value='#{goal}')
              br
              input#save(class='button', value='Save', type='submit')
              input#addPicture(class='button', value='Add Picture')
        .picture
          img.picture(src='images/nightlife-q-c-450-450-6.jpg')
        #clear
      #help
